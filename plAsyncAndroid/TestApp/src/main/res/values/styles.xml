<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name='AppTheme.textStyleMedium' parent="android:style/TextAppearance.Holo.Medium"/>

    <style name="AppTheme.tabViewStyle">
        <!--<item name="android:textAppearance">@style/AppTheme.textStyleMedium</item>-->
        <!--<item name="android:textColor">?android:attr/textColorPrimaryInverse</item>-->
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <!--<item name="android:textAllCaps">true</item>--> // Requires API 14
        <item name="android:ellipsize">marquee</item>
        <item name="android:maxLines">2</item>
    </style>



</resources>
